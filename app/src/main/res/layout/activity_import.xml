<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".ImportActivity">

    <!-- Back Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back_button"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Total Contact Count -->
    <TextView
        android:id="@+id/contactCountText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/contacts_imported"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/backBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/contactCountText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cbSendToAll">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- CSV/Excel Import Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- CSV Import Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnImportCsv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/import_excel_button"
                        style="@style/Widget.Material3.Button.ElevatedButton" />

                    <!-- CSV Count -->
                    <TextView
                        android:id="@+id/tvCsvCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/csv_contacts_imported"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:layout_marginTop="8dp" />

                    <!-- CSV Clear Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnClearCsv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/clear_csv_contacts"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp" />

                    <!-- CSV Expandable Content -->
                    <LinearLayout
                        android:id="@+id/csvExpandableContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:layout_marginTop="16dp">

                        <!-- Interactive Message Section -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/interactive_message_label"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/interactive_message_hint">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etExcelInteractiveMsg"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textMultiLine"
                                android:minLines="3" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginTop="8dp">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnExcelInteractiveSend"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/send_button"
                                android:layout_marginEnd="8dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnExcelInteractiveCancel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/cancel_button"
                                style="?attr/materialButtonOutlinedStyle" />
                        </LinearLayout>

                        <!-- Regular Message Section -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/regular_message_label"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="8dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/regular_message_hint">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etExcelRegularMsg"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textMultiLine"
                                android:minLines="3" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginTop="8dp">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnExcelRegularSend"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/send_button"
                                android:layout_marginEnd="8dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnExcelRegularCancel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/cancel_button"
                                style="?attr/materialButtonOutlinedStyle" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Phone Contacts Import Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Phone Import Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnImportContacts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/import_phone_button"
                        style="@style/Widget.Material3.Button.ElevatedButton" />

                    <!-- Phone Count -->
                    <TextView
                        android:id="@+id/tvPhoneCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/phone_contacts_imported"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:layout_marginTop="8dp" />

                    <!-- Phone Clear Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnClearPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/clear_phone_contacts"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp" />

                    <!-- Phone Expandable Content -->
                    <LinearLayout
                        android:id="@+id/phoneExpandableContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:layout_marginTop="16dp">

                        <!-- Interactive Message Section -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/interactive_message_label"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/interactive_message_hint">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etPhoneInteractiveMsg"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textMultiLine"
                                android:minLines="3" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginTop="8dp">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnPhoneInteractiveSend"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/send_button"
                                android:layout_marginEnd="8dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnPhoneInteractiveCancel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/cancel_button"
                                style="?attr/materialButtonOutlinedStyle" />
                        </LinearLayout>

                        <!-- Regular Message Section -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/regular_message_label"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="8dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/regular_message_hint">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etPhoneRegularMsg"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textMultiLine"
                                android:minLines="3" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginTop="8dp">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnPhoneRegularSend"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/send_button"
                                android:layout_marginEnd="8dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnPhoneRegularCancel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/cancel_button"
                                style="?attr/materialButtonOutlinedStyle" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>

    <!-- Send to All Toggle -->
    <CheckBox
        android:id="@+id/cbSendToAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send_to_all_toggle"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>

